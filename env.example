# HRL Universal Traffic Tracking - Environment Configuration

# Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_TYPE=postgresql+clickhouse+redis

# PostgreSQL (OLTP) - Application Data
POSTGRESQL_URL=postgresql://username:password@localhost:5432/hrl_tracking
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_DATABASE=hrl_tracking
POSTGRESQL_USERNAME=username
POSTGRESQL_PASSWORD=password

# ClickHouse (OLAP) - Analytics Data
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=hrl_analytics
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# Redis - Real-time Metrics & Presence
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-jwt-secret-here
IP_HASH_SALT=your-ip-hash-salt-here

# Features
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_METRICS=true
ENABLE_PRIVACY_COMPLIANCE=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
