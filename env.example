# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_analytics,write_analytics
SHOPIFY_APP_URL=https://your-app.railway.app
SHOPIFY_WEBHOOKS_SECRET=your_webhooks_secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Security
JWT_SECRET=your_jwt_secret_key_here
HMAC_SECRET=your_hmac_secret_key_here

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_TIME_WINDOW=60000

# Tracking Configuration
TRACKING_ENABLED=true
CONSENT_REQUIRED=true
DATA_RETENTION_DAYS=365

# Meta Conversions API (Optional)
META_ACCESS_TOKEN=your_meta_access_token
META_PIXEL_ID=your_meta_pixel_id
META_TEST_EVENT_CODE=your_test_event_code

# GeoIP Configuration
GEOIP_ENABLED=true
GEOIP_SERVICE=maxmind
MAXMIND_LICENSE_KEY=your_maxmind_license_key

# Performance Monitoring
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Background Jobs
CRON_ENABLED=true
AGGREGATION_INTERVAL=300000
CLEANUP_INTERVAL=3600000

# Development
DEBUG=false
LOG_LEVEL=info
